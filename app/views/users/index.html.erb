<div class="container">
  <br>
  <div class="headfix">
  <h1 class="headfont">ユーザーリスト</h1>
  </div>

  <br>

  <% @users.each do |user| %>
  <div class="card mb-2">
    <div class="card-body">
      <div class="row pb-5">
        <div class="col-2">
          <i class="bi bi-person-circle fontcolor2"></i>

        </div>
        <div class="col-10 boxflex">
          <h2 class="textflex mb-0"><%= link_to user.username, user_path(user.id) %></h2>

        </div>
        </div>
    </div>

  </div>

  <% end %>

</div>
